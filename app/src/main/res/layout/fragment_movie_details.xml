<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/small_space"
    tools:context="ch.berta.fabio.popularmovies.ui.MovieDetailsFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:id="@+id/fl_details_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_two_pane_header_height"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <ImageView
                android:id="@+id/iv_details_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/movie_backdrop"
                android:scaleType="centerCrop"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scrim_gradient"
                />

            <TextView
                android:id="@+id/tv_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/key_line_1"
                android:layout_marginEnd="@dimen/key_line_1"
                android:layout_marginBottom="@dimen/small_space"
                android:layout_gravity="bottom"
                style="@style/TextAppearance.AppCompat.Display2"
                tools:text="Iron Man"
                />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_details_poster"
            android:layout_width="@dimen/detail_poster_width"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fl_details_header"
            android:layout_marginStart="@dimen/key_line_1"
            android:layout_marginTop="@dimen/normal_space"
            android:contentDescription="@string/movie_poster"
            android:transitionName="@string/shared_transition_details_poster"
            />

        <TextView
            android:id="@+id/tv_details_header_facts"
            style="@style/SubHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sub_header_height"
            android:layout_toEndOf="@+id/iv_details_poster"
            android:layout_below="@id/fl_details_header"
            android:paddingEnd="@dimen/key_line_1"
            android:paddingStart="@dimen/key_line_1"
            android:paddingTop="@dimen/normal_space"
            android:text="@string/header_facts"
            />

        <TextView
            android:id="@+id/tv_details_release_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_details_header_facts"
            android:layout_toEndOf="@id/iv_details_poster"
            android:paddingEnd="@dimen/key_line_1"
            android:paddingStart="@dimen/key_line_1"
            tools:text="27. September 2015"
            />

        <TextView
            android:id="@+id/tv_details_rating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_details_release_date"
            android:layout_toEndOf="@id/iv_details_poster"
            android:paddingEnd="@dimen/key_line_1"
            android:paddingStart="@dimen/key_line_1"
            tools:text="Rating: 456.78"
            />

        <TextView
            android:id="@+id/tv_details_header_plot"
            style="@style/SubHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sub_header_height"
            android:layout_alignParentStart="true"
            android:layout_below="@id/iv_details_poster"
            android:paddingEnd="@dimen/key_line_1"
            android:paddingStart="@dimen/key_line_1"
            android:paddingTop="@dimen/normal_space"
            android:text="@string/header_plot"
            />

        <TextView
            android:id="@+id/tv_details_plot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_details_header_plot"
            android:paddingEnd="@dimen/key_line_1"
            android:paddingStart="@dimen/key_line_1"
            tools:text="A team of explorers travel through a wormhole in space in an attempt to ensure humanity's survival."
            />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
